  "components": {
    "schemas": {
      "CreateGameRequest": {
        "type": "object",
        "properties": {
          "player1": {
            "type": "string",
            "nullable": true
          },
          "player2": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "FlipCardsRequest": {
        "type": "object",
        "properties": {
          "gameId": {
            "type": "string",
            "format": "uuid"
          },
          "index1": {
            "type": "integer",
            "format": "int32"
          },
          "index2": {
            "type": "integer",
            "format": "int32"
          },
          "player": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "LoginModel": {
        "type": "object",
        "properties": {
          "identificador": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "Search": {
        "type": "object",
        "properties": {
          "apodo": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "StatusUser": {
        "enum": [
          0,
          1,
          2
        ],
        "type": "integer",
        "format": "int32"
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "Escribe **_SOLO_** tu token JWT",
